<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_background2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/imageview_club_post_head_height">

        <ImageView
            android:id="@+id/iv_item_rv_club_post_head_club_picture"
            android:layout_width="match_parent"
            android:scaleType="centerInside"
            android:layout_height="@dimen/imageview_club_post_head_height" />

        <TextView
            android:id="@+id/tv_item_rv_club_post_head_club_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="#FFF"
            android:textSize="24sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_item_rv_club_post_head_add_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/layout_circle_corner_gray"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_rv_club_post_head_user_picture"
            android:layout_width="@dimen/imageview_picture_in_list_width"
            android:layout_height="@dimen/imageview_picture_in_list_width"
            android:layout_margin="@dimen/imageview_picture_in_list_margin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="What's news?"
            android:textColor="#FFF"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>