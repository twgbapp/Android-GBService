<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_dialog_package_receive_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrive Date"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_dialog_package_receive_arrive_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Picker Picture"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_dialog_package_receive_take_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Take Picture"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_dialog_package_receive_pickpicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>