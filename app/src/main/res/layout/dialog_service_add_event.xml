<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#16afce"
        android:gravity="center"
        android:padding="10dp"
        android:text="Add Event"
        android:textColor="#FFF"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background2"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/quick_repair_area"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/tv_dialog_service_add_event_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_rect_gray"
            android:hint="@string/select"
            android:padding="10dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/quick_repair_kind"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/tv_dialog_service_add_event_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_rect_gray"
            android:hint="@string/select"
            android:padding="10dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/quick_repair_item"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/tv_dialog_service_add_event_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_rect_gray"
            android:hint="@string/select"
            android:padding="10dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/description"
            android:textColor="#FFF" />

        <EditText
            android:id="@+id/et_dialog_service_add_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_rect_gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_service_add_event_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#16afce"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/cancel"
            android:textColor="#FFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_dialog_service_add_event_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#16afce"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/confirm"
            android:textColor="#FFF"
            android:textSize="24sp" />
    </LinearLayout>


</LinearLayout>