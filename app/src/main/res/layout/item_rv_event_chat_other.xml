<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_background2"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_item_rv_event_chat_other_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_person_replace" />

        <TextView
            android:id="@+id/tv_item_rv_event_chat_other_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="10:10"
            android:textColor="#FFF"
            android:textSize="10sp" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_item_rv_event_chat_other_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/iv_item_rv_event_chat_other_rating"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:src="@drawable/background_rating"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_item_rv_event_chat_other_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" />
    </android.support.v7.widget.CardView>
</LinearLayout>