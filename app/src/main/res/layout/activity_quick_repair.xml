<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/main_background2"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_corner_round_light_blue"
                android:gravity="center"
                android:text="@string/quick_repair"
                android:textColor="#FFF"
                android:textSize="24sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/quick_repair_applicant"
                        android:textColor="#FFF"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_quick_repair_applicant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_quick_repair"
                        android:enabled="false"
                        android:textColorHint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/quick_repair_area"
                        android:textColor="#FFF"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/sp_quick_repair_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_corner_round" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/quick_repair_kind"
                        android:textColor="#FFF"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/sp_quick_repair_kind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_corner_round" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/quick_repair_item"
                        android:textColor="#FFF"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/sp_quick_repair_kind_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_corner_round" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/quick_repair_place"
                        android:textColor="#FFF"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_quick_repair_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_quick_repair"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColorHint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/quick_repair_description"
                        android:textColor="#FFF"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_quick_repair_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_quick_repair"
                        android:gravity="top"
                        android:minLines="3"
                        android:textColorHint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tv_quick_repair_send"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/main_light_blue"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/confirm"
                        android:textColor="#FFF"
                        android:textSize="20sp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
