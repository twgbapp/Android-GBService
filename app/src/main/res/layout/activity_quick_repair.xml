<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background2"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/quick_repair_applicant"
                android:textColor="#FFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_quick_repair_applicant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_rect_gray"
                android:enabled="false"
                android:textColor="#FFF"
                android:textColorHint="#FFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/title"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_quick_repair_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_rect_gray"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#FFF"
                android:textColorHint="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/quick_repair_area"
                android:textColor="#FFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_quick_repair_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_rect_gray"
                android:hint="@string/select"
                android:padding="10dp"
                android:textColor="#FFF"
                android:textColorHint="#FFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/quick_repair_kind"
                android:textColor="#FFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_quick_repair_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_rect_gray"
                android:hint="@string/select"
                android:padding="10dp"
                android:textColor="#FFF"
                android:textColorHint="#FFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/quick_repair_item"
                android:textColor="#FFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_quick_repair_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_rect_gray"
                android:hint="@string/select"
                android:padding="10dp"
                android:textColor="#FFF"
                android:textColorHint="#FFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/quick_repair_place"
                android:textColor="#FFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_quick_repair_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_rect_gray"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#FFF"
                android:textColorHint="#FFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/quick_repair_description"
                android:textColor="#FFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_quick_repair_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_rect_gray"
                android:gravity="top"
                android:minLines="3"
                android:textColor="#FFF"
                android:textColorHint="#FFF" />

            <TextView
                android:id="@+id/tv_quick_repair_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/main_light_blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/confirm"
                android:textColor="#FFF"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
