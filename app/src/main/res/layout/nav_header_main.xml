<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main_nav_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="10dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_main_user_picture"
        android:layout_width="@dimen/imageview_navigation_picture_width"
        android:layout_height="@dimen/imageview_navigation_picture_width"
        android:layout_gravity="center"
        android:layout_margin="@dimen/imageview_navigation_picture_margin"
        android:src="@drawable/ic_person_white" />

    <TextView
        android:id="@+id/tv_main_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Android Studio"
        android:textColor="#FFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_main_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="android.studio@android.com"
        android:textColor="#FFF"
        android:textSize="16sp" />

</LinearLayout>
