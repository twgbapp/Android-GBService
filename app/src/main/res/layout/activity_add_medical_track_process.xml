<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_layout"
    android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="追蹤處理"
                    android:textColor="#FFF"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/iv_add_medical_track_process_done"
                    android:layout_width="@dimen/imageview_toolbar_width"
                    android:layout_height="@dimen/imageview_toolbar_width"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/imageview_toolbar_margin"
                    android:src="@drawable/ic_done_white" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medical_track_process_1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/et_add_medical_track_process_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:maxLines="1" />

            <CheckBox
                android:id="@+id/cb_add_medical_track_process_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_label_name_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medical_track_process_2"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/et_add_medical_track_process_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:maxLines="1" />

            <CheckBox
                android:id="@+id/cb_add_medical_track_process_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_label_name_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medical_track_process_3"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/et_add_medical_track_process_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:maxLines="1" />

            <CheckBox
                android:id="@+id/cb_add_medical_track_process_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_label_name_fourth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/medical_track_process_4"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/cb_add_medical_track_process_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
