<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_background2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_rv_gb_activity_list_type"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_item_rv_gb_activity_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="2016/10/10"
            android:textColor="@color/main_light_blue"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_rv_gb_activity_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TITLE"
        android:textColor="#FFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_item_rv_gb_activity_list_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TEXT"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="10dp"
        android:background="#FFF" />
</LinearLayout>