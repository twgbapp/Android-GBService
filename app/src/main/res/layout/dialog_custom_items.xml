<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_light_blue"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_dialog_custom_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#C5E9EF"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="visible">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_dialog_custom_item_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_dialog_custom_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/main_light_blue"
            android:textSize="24sp" />
    </LinearLayout>


    <ListView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:divider="#00FFFFFF"
        android:id="@+id/lv_dialog_custom_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>